---
import LayoutPages from "@/layouts/LayoutPages.astro"
import Article from "@/components/Article.astro"
import { HISTORY } from "@/const/history"
---

<LayoutPages title="Historia">
    <section class="mb-10 font-dosis flex flex-col">
        <h2 class="font-bold text-5xl my-2 uppercase">
            Historia
        </h2>
        {
            HISTORY.map((link) =>(
                <Article
                    title={link.title}
                    body={link.body}
                >
                    {
                        link.image.name != "" &&
                    <img 
                        slot="before" 
                        class="float-left m-3"
                        src={`/public/img/history/${link.image.name}.jpg`} 
                        width={link.image.width}
						loading="lazy"
						height={link.image.height}
                        alt="">
                    }
                </Article>
            ))
        }
    </section>
</LayoutPages>